<div class='user_item'>
  <div class='user_img'>
    <%profil = nil%>
    <%if user.photo.present?%>
      <%profil = user.photo%>
    <%else%>
      <%profil = "https://picsum.photos/200"%>
    <%end%>
    <%= image_tag profil, 
                alt: "profil image", width: "100px", height: "100px", class:'profile_picture' %>
  </div>
  <div class='user_details'>
    <p class='u_details_name'>
     <%= link_to user_path(user) do %>
      <%= user.name %><br>
      <%end%>
    </p>
    <span class='u_details_numberOfPosts'>
      Number of posts: <%= user.posts_counter%>
    </span>
  </div>
</div>
