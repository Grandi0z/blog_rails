<div class='user_item'>
  <div class='user_img'>
    <%= image_tag user.photo, 
                alt: "profil image", width: "100px", height: "100px" %>
  </div>
  <div class='user_details'>
    <p class='u_details_name'>
     <%= link_to user_path(user) do %>
      <%= user.name %><br>
      <%end%>
    </p>
    <span class='u_details_numberOfPosts'>
      Number of posts: <%= user.posts_counter%>
    </span>
  </div>
</div>
